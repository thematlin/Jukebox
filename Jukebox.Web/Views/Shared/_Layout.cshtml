@using Jukebox.Web.ExtensionMethods

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="Stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/site.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.corners.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.13.min.js")" type="text/javascript"></script>

</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Jukebox</h1>
                <div class="login">
                    @if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("Log out", "LogOff", "Account")
                    }
                    else
                    {
                        Html.RenderPartial("_LogOnPartial");
                    }
                </div>
            </div>
        </header>
        <section id="player">
            <div id="mediaplayerContainer">
                @Html.Partial("_MediaPlayer")
            </div>
            <div id="playlistContainer">
                @Html.Partial("_Playlist")  
            </div>
        </section>
        <section id="main">
            <header>
                <nav>
                    <ul id="menu">
                        <li class="@Html.SelectedTab("Library",  new string[] {"Index"}, "selected")">@Html.ActionLink("Library", "Index", "Library")</li>
                        <li class="@Html.SelectedTab("Search",  new string[] {"Track"}, "selected")">@Html.ActionLink("Search", "Track", "Search")</li>
                    </ul>
                </nav>
            </header>
            <article id="contentContainer">
                <div id="content">
                    @RenderBody()
                </div>
            </article>
        </section>
        <footer>
        </footer>
    </div>

    <script  type="text/javascript">
    
        $(document).ready(function() {
            baseUrl = $('#applicationUrl').val();
        });
    
    </script>

    <input type="hidden" id="applicationUrl" value="@Url.Content("~/")" />
</body>
</html>
